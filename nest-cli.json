{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true,
          "dtoFileNameSuffix": [".vm.ts"]
        }
      }
    ],
    "assets": [
      { "include": "/i18n/**/*", "watchAssets": true, "outDir": "dist/" }
    ]
  }
}
